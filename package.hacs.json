  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "eslint": "^8.42.0",
    "http-server": "^14.1.1",
    "clean-css": "^5.3.2",
    "terser": "^5.17.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chr-braun/iPadHA.git"
  },
  "bugs": {
    "url": "https://github.com/chr-braun/iPadHA/issues"
  },
  "homepage": "https://github.com/chr-braun/iPadHA#readme",
