  "description": "iPadHA - Home Assistant Dashboard fÃ¼r iOS 9.3.5 mit Glasmorphismus-Design",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "node scripts/build-css.js",
    "build:js": "node scripts/build-js.js",
    "build:hacs": "npm run build && node scripts/build-hacs.js",
    "build:release": "npm install && node scripts/build-release.js",
    "release:github": "node scripts/create-github-release.js",
    "release:publish": "node scripts/create-github-release.js --publish",
    "test": "node tests/test.js",
    "lint": "eslint src/js/**/*.js",
    "serve": "http-server public -p 8080"
  },
  "keywords": [
    "home-assistant",
    "ipad",
    "ios9",
    "dashboard",
